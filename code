int ıslem= scan.nextInt();

	

	switch (ıslem){

	 case 1:

	 System.out.println("Bakiye yatırmak istediğin miktar:");

	 

	 int ıslem1=scan.nextInt();

	 

	 System.out.println("Bakiyeniz"+ " " +( ıslem1+bakiye));

	 

	break;

	

	case 2:

	System.out.println("Bakiye çekmek istediğiniz miktar");

	int ıslem2 = scan.nextInt();

	if (ıslem2>1000) {

	System.out.println("Yetersiz bakiye");

	}

	else {

	System.out.println("Kalan bakiye  " + (bakiye -ıslem2));

